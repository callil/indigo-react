{
  "author": "tlon",
  "license": "MIT",
  "repository": "urbit/indigo-react",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "force-bootstrap": "lerna exec npm install",
    "build": "lerna run build",
    "start": "lerna run start --stream",
    "start:docs": "lerna run start:docs --stream",
    "esbuild": "lerna run esbuild",
    "esbuild:prod": "lerna run esbuild:prod",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint src --fix",
    "deploy": "gh-pages -d docs/dist"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@reach/menu-button": "^0.1.18",
    "@tlon/indigo-tokens": "^1.2.11",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.5.0",
    "@types/reach__menu-button": "^0.1.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.1.0",
    "@types/styled-system": "^5.1.9",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "codemirror": "^5.53.2",
    "css-loader": "^3.5.3",
    "esbuild": "^0.1.26",
    "eslint": "^6.8.0",
    "file-loader": "^6.0.0",
    "formik": "^2.1.4",
    "gh-pages": "^1.2.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.0",
    "lerna": "^3.20.2",
    "parcel": "^1.12.4",
    "react": "^16.13.1",
    "react-codemirror2": "^7.1.0",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^5.1.2",
    "style-loader": "^1.2.1",
    "styled-components": "^5.1.0",
    "styled-system": "^5.1.5",
    "tsdx": "^0.12.3",
    "tslib": "^1.11.2",
    "typescript": "^3.7.5",
    "urbit-ob": "^5.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "yup": "^0.28.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 100,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "name": "indigo-react"
}
